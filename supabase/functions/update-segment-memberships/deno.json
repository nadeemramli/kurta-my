{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch index.ts",
    "deploy": "deployctl deploy --project=update-segment-memberships --prod index.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "importMap": "./import_map.json",
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
} 